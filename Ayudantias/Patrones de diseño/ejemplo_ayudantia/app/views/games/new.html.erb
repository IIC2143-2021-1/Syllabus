<h1>Nuevo juego</h1>

<%= form_with(model: @game, method: :post) do |form| %>
    <div style="display: none;">
        <div class="field">
        <label class="label"><%= form.label :Título %></label>
            <%= form.text_field :title %>
        </div>

        <div class="field">
            <%= form.label :Rating %>
            <%= form.text_field :rating %>
        </div>

        <div class="field">
            <%= form.label :Tamaño %>
            <%= form.text_field :size_mb %>
        </div>

        <div class="field">
            <%= form.label :Descripción %>
            <%= form.text_field :description %>
        </div>
        
        <div class="file">
            <label class="file-label">
                <input class="file-input" type="file" name="resume">
                <span class="file-cta">
                <span class="file-icon">
                    <i class="fas fa-upload"></i>
                </span>
                <span class="file-label">
                    Choose a file…
                </span>
                </span>
            </label>
        </div>
    </div>

    <div class="action">
        <%= form.submit "Crear Juego"%>
    </div>
<% end %>
<p><%= link_to 'Volver', games_index_path %></p>