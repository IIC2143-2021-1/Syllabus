<p id="notice"><%= notice %></p>

<h1>Libros</h1>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Autor</th>
      <th>Edición</th>
      <th>Rating</th>
      <th>Tamaño (mb)</th>
      <th>Descripción</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.edition %></td>
        <td><%= book.rating %></td>
        <td><%= book.size_mb %></td>
        <td><%= book.description %></td>
        <td><%= link_to 'Ver Detalle', book %></td>
        <td><%= link_to 'Ver Detalle'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

